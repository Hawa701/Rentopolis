@using System.Security.Claims
@{
    bool isAuthenticated = User.Identity.IsAuthenticated;
    // string selectedPage = "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Rentopolis</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Rentopolis.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <!-- HEADER -->
    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">

            <!-- Logo -->
            <a class="navbar-brand fs-4" asp-controller="Home" asp-action="Index">
                @* <i class="fa-solid fa-cubes fs-4 me-1"></i> *@
                <i class="fa-solid fa-fan fs-4 me-1"></i>
                Rentopolis
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <!-- Links -->
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav ms-auto">
                    @if (User.IsInRole("Admin"))
                    {
                        <a class="nav-link" aria-current="page" asp-controller="Admin" asp-action="Home">Dashboard</a>
                        <a class="nav-link" asp-controller="Admin" asp-action="AllUsers" asp-route-role="Manager">Managers</a>
                        <a class="nav-link" asp-controller="Admin" asp-action="AllUsers" asp-route-role="Landlord">Landlords</a>
                        <a class="nav-link" asp-controller="Admin" asp-action="AllUsers" asp-route-role="Tenant">Tenants</a>
                        <a class="nav-link me-5" asp-controller="Property" asp-action="AllProperties">Properties</a>
                    }
                    @if (User.IsInRole("Manager"))
                    {
                        <a class="nav-link" aria-current="page" asp-controller="Manager" asp-action="Home">Dashboard</a>
                        <a class="nav-link" asp-controller="Property" asp-action="PendingProperties">Pending Approvals</a>
                        <a class="nav-link" asp-controller="Manager" asp-action="AllUsers" asp-route-role="Landlord">Landlords</a>
                        <a class="nav-link me-5" asp-controller="Manager" asp-action="AllUsers" asp-route-role="Tenant">Tenants</a>
                    }
                    @if (User.IsInRole("Landlord"))
                    {
                        <a class="nav-link" aria-current="page" asp-controller="Landlord" asp-action="Home">Home</a>
                        <a class="nav-link" asp-controller="Property" asp-action="MyProperties" asp-route-id="@User.FindFirstValue(ClaimTypes.NameIdentifier)">My Property</a>
                        @* <a class="nav-link" asp-controller="Landlord" asp-action=""></a> *@
                        <a class="nav-link me-5" asp-controller="Landlord" asp-action="">Messages</a>
                    }
                    @if (User.IsInRole("Tenant"))
                    {
                        <a class="nav-link" aria-current="page" asp-controller="Tenant" asp-action="Home">Home</a>
                        <a class="nav-link" asp-controller="Property" asp-action="Listings">Listings</a>
                        <a class="nav-link" asp-controller="Property" asp-action="Favorites" asp-route-id="@User.FindFirstValue(ClaimTypes.NameIdentifier)"> Favorites</a>
                        <a class="nav-link me-5" asp-controller="Property" asp-action="Requests" asp-route-id="@User.FindFirstValue(ClaimTypes.NameIdentifier)">Requests</a>
                    }
                    @if (!isAuthenticated)
                    {
                        <!-- Display nothing! -->    
                    }
                </div>

                @if (!isAuthenticated)
                {
                    <!-- Sign in button -->
                    <a class="btn btn-outline-secondary shadow-sm d-sm d-block" style="box-shadow: none;" asp-controller="Account" asp-action="Login">Sign In</a>
                }

                @if (isAuthenticated)
                {
                    <!-- User Avatar -->
                    <div class="dropdown ml-auto">
                        <a class="btn btn-outline-secondary dropdown-toggle" style="box-shadow: none;" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                            @User.FindFirstValue(ClaimTypes.Name)
                        </a>

                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                            <li>
                                <a class="dropdown-item d-flex justify-content-start align-items-center gap-2" asp-controller="Account" asp-action="MyProfile" asp-route-id="@User.FindFirstValue(ClaimTypes.NameIdentifier)">
                                    <i class="fa-solid fa-user"></i>
                                    My Profile
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item d-flex justify-content-start align-items-center gap-2" asp-controller="Account" asp-action="ChangePassword" asp-route-id="@User.FindFirstValue(ClaimTypes.NameIdentifier)">
                                    <i class="fa-solid fa-key"></i>
                                    Change Password
                                </a>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item d-flex justify-content-start align-items-center gap-2 text-black" href="#" data-bs-toggle="modal" data-bs-target="#logoutModal">
                                    <i class="fa-solid fa-right-from-bracket"></i>
                                    Log Out
                                </a>
                            </li>
                        </ul>
                    </div>

                    <!-- Logout Modal -->
                    <div class="modal fade" id="logoutModal" tabindex="-1" aria-labelledby="logoutModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content ps-3 pe-3">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="logoutModalLabel">Confirmation</h5>
                                </div>
                                <div class="modal-body">
                                    <p>Are you sure you want to log out?</p>
                                </div>
                                <div class="modal-footer gap-2">
                                    <a class="btn btn-primary" href="/Account/Logout">Yes</a>
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                }
            </div>

        </div>
    </nav>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container d-flex justify-content-center">
            &copy; 2024 - Rentopolis
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        function showRequestConfirmationModal(event) {
            event.preventDefault(); // Prevent form submission
            $('#requestConfirmationModal').modal('show');
        }
        function showCancelConfirmationModal(event) {
            event.preventDefault(); // Prevent form submission
            $('#cancelConfirmationModal').modal('show');
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
