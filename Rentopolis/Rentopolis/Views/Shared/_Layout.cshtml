@using System.Security.Claims
@{
    bool isAuthenticated = User.Identity.IsAuthenticated;
    // string selectedPage = "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Rentopolis</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Rentopolis.styles.css" asp-append-version="true" />
</head>
<body>
    <!-- HEADER -->
    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">

            <!-- Logo -->
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">Rentopolis</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <!-- Links -->
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav ms-auto">
                    @if (User.IsInRole("Admin"))
                    {
                        <a class="nav-link active" aria-current="page" asp-controller="Admin" asp-action="Home">Dashboard</a>
                        <a class="nav-link" asp-controller="Admin" asp-action="ListUsers" asp-route-role="Manager">Managers</a>
                        <a class="nav-link" asp-controller="Admin" asp-action="ListUsers" asp-route-role="Landlord">Landlords</a>
                        <a class="nav-link me-5" asp-controller="Admin" asp-action="ListUsers" asp-route-role="Tenant">Tenants</a>
                    }
                    @if (User.IsInRole("Manager"))
                    {
                        <a class="nav-link active" aria-current="page" asp-controller="Manager" asp-action="Home">Dashboard</a>
                        <a class="nav-link" asp-controller="Manager" asp-action="">Pending Approvals</a>
                        <a class="nav-link" asp-controller="Manager" asp-action="">Landlords</a>
                        <a class="nav-link me-5" asp-controller="Manager" asp-action="">Tenants</a>
                    }
                    @if (User.IsInRole("Landlord"))
                    {
                        <a class="nav-link active" aria-current="page" asp-controller="Landlord" asp-action="Home">Home</a>
                        <a class="nav-link" asp-controller="Landlord" asp-action="">Properties</a>
                        @* <a class="nav-link" asp-controller="Landlord" asp-action=""></a> *@
                        <a class="nav-link me-5" asp-controller="Landlord" asp-action="">Messages</a>
                    }
                    @if (User.IsInRole("Tenant"))
                    {
                        <a class="nav-link active" aria-current="page" asp-controller="Tenant" asp-action="Home">Home</a>
                        <a class="nav-link" asp-controller="Tenant" asp-action="">Listings</a>
                        <a class="nav-link" asp-controller="Tenant" asp-action="">Favorites</a>
                        <a class="nav-link me-5" asp-controller="Tenant" asp-action="">Messages</a>
                    }
                    @if (!isAuthenticated)
                    {
                        <!-- Display nothing! -->    
                    }
                </div>

                @if (!isAuthenticated)
                {
                    <!-- Sign in button -->
                    <a class="btn btn-outline-secondary shadow-sm d-sm d-block" asp-controller="Account" asp-action="Login">Sign In</a>
                }

                @if (isAuthenticated)
                {
                    <!-- User Avatar -->
                    <div class="dropdown ml-auto">
                        <a class="btn btn-outline-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                            @User.FindFirstValue(ClaimTypes.Name)
                        </a>

                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                            <li><a class="dropdown-item" asp-controller="Account" asp-action="ViewProfile" asp-route-id="@User.FindFirstValue(ClaimTypes.NameIdentifier)">View Profile</a></li>
                            <li><a class="dropdown-item" asp-controller="Account" asp-action="Logout">Log Out</a></li>
                        </ul>
                    </div>
                    
                }
            </div>

        </div>
    </nav>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container d-flex justify-content-center">
            &copy; 2024 - Rentopolis
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
