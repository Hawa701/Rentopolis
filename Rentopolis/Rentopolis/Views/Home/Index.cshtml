@{
    ViewData["Title"] = "Home Page";
}

<section class="hero">
    <div class="container">
        <div class="row align-items-center">

            <!-- text-->
            <div class="col-md-6">
                <div class="text">
                    <span class="title">
                        Discover Your Perfect Rental with Rentopolis
                    </span>
                    <span class="description">
                        Rentopolis is a cutting-edge house rental platform that brings together the dynamic
                        spirit of a metropolis and the convenience of finding your perfect rental property. Experience the urban rental revolution with Rentopolis and
                        discover the perfect place to call your own.
                    </span>
                </div>
                <div class="buttons d-flex justify-content-center mt-3">
                    <a class="btn btn-primary" asp-controller="Account" asp-action="Register">Register Now</a>
                </div>
            </div>

            <!-- image-->
            <div class="col-md-6">
                <img src="./Images/Assets/suitcase.png" alt="Hero-img" class="w-100" />
            </div>

        </div>
    </div>
</section>