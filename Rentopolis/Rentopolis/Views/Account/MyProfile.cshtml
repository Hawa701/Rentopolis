@using System.Security.Claims
@using Rentopolis.Models.Data
@model Rentopolis.Models.Entitiy.FullInfoViewModel


<div class="p-5 mb-5 rounded" style="box-shadow: 0px 20px 40px rgba(0, 0, 0, 0.23);">

    @* if there is any error *@
    @if (TempData.ContainsKey("deletionError"))
    {
        <div asp-validation-summary="All" class="alert alert-danger">
                <li class="m-0">@TempData["deletionError"] </li>
        </div>
        TempData.Remove("deletionError");
    }

    @* if edit or delete are successful *@
    @if (TempData.ContainsKey("successMessage"))
    {
        <div asp-validation-summary="All" class="alert alert-success">
            <li>Updated successfully!</li>
        </div>
        TempData.Remove("successMessage");
    }

    <h1>My Profile</h1>

    <div class="container d-flex justify-content-center align-items-center gap-5 p-4">
        @* pic *@
        <div>
            <img src="@Model.ProfilePicUrl" alt="@Model.FirstName @Model.LastName's profile picture" style="width:250px; height: 250px; border-radius: 50%;" />
        </div>
        
        @* info *@
        <div class="flex-grow-1">

            @* id *@
            <div>
                <p class="fw-light fst-italic" style="font-size: 13px;">User Id = @Model.Id</p>
            </div>

            @* full name *@
            <div class="d-flex justify-content-start align-items-center gap-2">
                <p>Full Name:  </p>
                <p class="fw-bold fs-5">@Model.FirstName @Model.LastName </p>
            </div>

            @* username *@
            <div class ="d-flex justify-content-start align-items-center gap-2">
                <p>User Name: </p>
                <p class="fw-bold fs-5">@Model.UserName</p>
            </div>

            @* email *@
            <div class="d-flex justify-content-start align-items-center gap-2">
                <p>Email: </p>
                <p class="fw-bold fs-5">@Model.Email</p>
            </div>

            @* registered as *@
            <div class="d-flex justify-content-start align-items-center gap-2">
                <p>Registered as: </p>
                <p class="fw-bold fs-5">@User.FindFirstValue(ClaimTypes.Role)</p>
            </div>

            @if (!User.IsInRole("Admin") && !User.IsInRole("Manager"))
            {
                <hr />

                @* report count *@
                <div class="d-flex justify-content-end align-items-center gap-2">
                    <p class="text-muted" style="font-size:14px;">
                        Total Reports(@((ViewBag.Reports)?.Count ?? 0))
                    </p>
                </div>

                @* reports *@
                <div class="d-flex justify-content-start align-items-center gap-2 mb-5">
                    @if (ViewBag.Reports != null && ((List<ReportedUsers>)ViewBag.Reports).Count > 0)
                    {
                        <p>Reports: </p>
                        <ul>   
                            @foreach (var report in ViewBag.Reports)
                            {
                                <li>@report.Message</li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-center w-100">No reports yet!</p>
                    }
                </div>

                <hr />
            }

            @* edit button *@
            <div class="d-flex justify-content-end gap-3">
                <a class="btn btn-outline-primary" asp-controller="Account" asp-action="EditProfile" asp-route-id="@Model.Id">
                    <i class="fa-solid fa-pen me-2"></i>
                    Edit Profile
                </a>
                @if (User.IsInRole("Landlord") || User.IsInRole("Tenant"))
                {
                    <button class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#terminateAccountModal">
                        <i class="fa-solid fa-user-xmark me-2"></i>
                        Terminate
                    </button>

                    <!-- Terminate Account Modal -->
                    <div class="modal fade" id="terminateAccountModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="terminateAccountModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="terminateAccountModalLabel">Confirmation</h5>
                                </div>
                                <div class="modal-body">
                                    <p>Are you sure you want to terminate your account?</p>
                                </div>
                                <div class="modal-footer gap-2">
                                    <a class="btn btn-danger" asp-action="DeleteProfile" asp-controller="Account" asp-route-id="@Model.Id">Yes</a>
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

        </div>


    </div>

</div>