@model Rentopolis.Models.Entitiy.Registeration

<h1 class="bg-dark text-white">Register</h1>

<div asp-validation-summary="All" class="text-danger">
    @if (TempData["msg"] != null)
    {
        <p>@TempData["msg"]</p>
    }
</div>

<form method="post" asp-action="Register">

    @* first name *@
    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" type="text" />
    </div>

    @* last name *@
    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" type="text" />
    </div>

    @* email *@
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" type="email" />
    </div>

    @* user name *@
    <div class="form-group">
        <label asp-for="UserName"></label>
        <input asp-for="UserName" class="form-control" type="text" />
    </div>

    @* password *@
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" type="text" />
    </div>

    @* confirm password *@
    <div class="form-group">
        <label asp-for="ConfirmPassword"></label>
        <input asp-for="ConfirmPassword" class="form-control" type="text" />
    </div>

    @* role *@
    <div class="form-group">
        <label asp-for="Role"></label>
        <select class="form-control" asp-for="Role">
            <option value="tenant">Tenant</option>
            <option value="landlord">Landlord</option>
        </select>
    </div>

    <br />

    <div class="form-group">
        <button class="btn btn-primary" type="submit">Register</button>
    </div>

    <span>
        Already have an account?'
        <a asp-action="Login">Click here to login</a>
    </span>

</form>