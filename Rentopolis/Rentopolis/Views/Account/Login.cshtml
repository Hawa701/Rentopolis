@model Rentopolis.Models.Entitiy.Login

<h1 class="bg-dark text-white">Login</h1>

<div asp-validation-summary="All" class="text-danger">
    @if (TempData["msg"] != null)
    {
        <p>@TempData["msg"]</p>
    }
</div>

<form method="post" asp-action="Login">

    <div class="form-group">
        <label asp-for="UserName"></label>
        <input asp-for="UserName" class="form-control" type="text" />
    </div>

    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" type="text" />
    </div>

    <div class="form-group">
        Remember Me?<input asp-for="RememberMe" type="checkbox" />
    </div>

    <br />

    <div class="form-group">
        <button class="btn btn-primary" type="submit">Login</button>
    </div>

    <span>
        Don't have an account?'
        <a asp-action="Register">Click here to register</a>
    </span>

</form>