@using System.Security.Claims
@model Rentopolis.Models.Entitiy.Update

<h1 class="bg-dark text-white">View Profile</h1>

<div asp-validation-summary="All" class="text-danger">
    @if (TempData["errorMessage"] != null)
    {
        <p>@TempData["errorMessage"]</p>
    }
</div>

<div>
    @* id *@
    <div>
        <p>User Id: @Model.Id</p>
    </div>

    @* first name *@
    <div>
        <p>First Name: @Model.FirstName</p>
    </div>

    @* last name *@
    <div>
        <p>Last Name: @Model.LastName</p>
    </div>

    @* email *@
    <div>
        <p>Email: @Model.Email</p>
    </div>

    @* user name *@
    <div>
        <p>Username: @Model.UserName</p>
    </div>

    @* role *@
    <div>
        <p>Role: @User.FindFirstValue(ClaimTypes.Role)</p>
    </div>

    <br />

    <div class="form-group">
        <a class="btn btn-primary" asp-controller="Account" asp-action="EditProfile" asp-route-id="@Model.Id">Edit</a>
    </div>

</div>