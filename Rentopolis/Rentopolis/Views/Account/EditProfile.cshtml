@model Rentopolis.Models.Entitiy.UpdateUserInfoViewModel

<div class="p-5 mb-5 rounded" style="box-shadow: 0px 20px 40px rgba(0, 0, 0, 0.23);">

    <h1 class="mb-4">Edit Profile</h1>

    @if (ViewBag.Success == false)
    {
        <div asp-validation-summary="All" class="alert alert-danger">
            @if (ViewBag.Message != null)
            {
                <ul> <li>@ViewBag.Message</li> </ul>
            }
        </div>
    }

    <form method="post" enctype="multipart/form-data" asp-action="EditProfile">

        @* first and last name *@
        <div class="d-flex justify-content-start align-items-center gap-5 mb-4">

            <div class="d-flex flex-column align-items-start flex-grow-1 gap-2">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" class="form-control" type="text" />
            </div>

            <div class="d-flex flex-column align-items-start flex-grow-1 gap-2">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" class="form-control" type="text" />
            </div>

        </div>

        @* user name and email *@
        <div class="d-flex justify-content-start align-items-center gap-5 mb-3">

            <div class="d-flex flex-column align-items-start flex-grow-1 gap-2">
                <label asp-for="UserName"></label>
                <input asp-for="UserName" class="form-control" type="text" />
            </div>

            <div class="d-flex flex-column align-items-start flex-grow-1 gap-2">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" type="email" />
            </div>

        </div>

        @* photo *@
        <div class="d-flex flex-column mb-3">
            <label asp-for="ProfilePic" for="formFile" class="form-label"></label>
            <input asp-for="ProfilePic" class="form-control" type="file" id="formFile">
        </div>

        <br/>

        @* button *@
        <div class="d-flex justify-content-end gap-3">
            <button class="btn btn-success" type="button" data-bs-toggle="modal" data-bs-target="#updateModal">Update</button>
            <a class="btn btn-secondary" asp-action="MyProfile" asp-controller="Account" asp-route-id="@Model.Id">Cancel</a>
        </div>

        <!-- Update Modal -->
        <div class="modal fade" id="updateModal" tabindex="-1" aria-labelledby="updateModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="updateModalLabel">Confirmation</h5>
                    </div>
                    <div class="modal-body">
                        <p>Are you sure you want to save the changes?</p>
                    </div>
                    <div class="modal-footer gap-2">
                        <button class="btn btn-success" type="submit">Yes</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                    </div>
                </div>
            </div>
        </div>

    </form>

</div>