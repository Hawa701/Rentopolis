<div class="p-5 mb-5 rounded" style="box-shadow: 0px 20px 40px rgba(0, 0, 0, 0.23);">

    <h1 class="mb-4">Edit Profile</h1>

    <form method="post" enctype="multipart/form-data" asp-action="EditProfile">

        @* first and last name *@
        <div class="d-flex justify-content-start align-items-center gap-5 mb-4">

            <div class="d-flex flex-column align-items-start flex-grow-1 gap-2">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" class="form-control" type="text" />
            </div>

            <div class="d-flex flex-column align-items-start flex-grow-1 gap-2">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" class="form-control" type="text" />
            </div>

        </div>

        @* user name and email *@
        <div class="d-flex justify-content-start align-items-center gap-5 mb-3">

            <div class="d-flex flex-column align-items-start flex-grow-1 gap-2">
                <label asp-for="UserName"></label>
                <input asp-for="UserName" class="form-control" type="text" />
            </div>

            <div class="d-flex flex-column align-items-start flex-grow-1 gap-2">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" type="email" />
            </div>

        </div>

        @* photo *@
        <div class="d-flex flex-column mb-3">
            <label asp-for="ProfilePic" for="formFile" class="form-label"></label>
            <input asp-for="ProfilePic" class="form-control" type="file" id="formFile">
        </div>

        <br/>

        @* button *@
        <div class="d-flex justify-content-end gap-3">
            <button class="btn btn-success" style="box-shadow: 0px 5px 10px rgba(0, 0, 0, 0.23);" type="submit">Update</button>
            <a class="btn btn-secondary" style="box-shadow: 0px 5px 10px rgba(0, 0, 0, 0.23);" asp-action="MyProfile" asp-controller="Account" asp-route-id="@Model.Id">Cancel</a>
        </div>

    </form>

</div>