@model Rentopolis.Models.Entitiy.NewPropertyViewModel

<h1>Create Property</h1>

@if (ViewBag.Success == false)
{
    <div asp-validation-summary="All" class="alert alert-danger">
        @if (ViewBag.Message != null)
        {
            <ul> <li>@ViewBag.Message</li> </ul>
        }
    </div>
}

<div class="mt-3">
    <form method="post" enctype="multipart/form-data" asp-action="CreateProperty" class="">

        <input type="text" asp-for="LandlordId" value="@TempData["LandlordId"]" hidden />

        @* address *@
        <div class="d-flex flex-column gap-1 mb-3">
            <label asp-for="Address"></label>
            <input asp-for="Address" class="input" type="text" />
        </div>

        @* sub city *@
        <div class="d-flex flex-column gap-1 mb-3">
            <label asp-for="City"></label>
            <select asp-for="City" class="form-select">
                <option value="">Select a sub city</option>
                <option value="Arada">Arada</option>
                <option value="Addis-Ketema">Addis-Ketema</option>
                <option value="Akaki-Kality">Akaki-Kality</option>
                <option value="Bole">Bole</option>
                <option value="Gulele">Gulele</option>
                <option value="Kirkos">Kirkos</option>
                <option value="Kolfe Keranio">Kolfe Keranio</option>
                <option value="Lideta">Lideta</option>
                <option value="Nifas Silk-Lafto">Nifas Silk-Lafto</option>
                <option value="Yeka">Yeka</option>
            </select>
        </div>

        @* features *@
        <div class="d-flex flex-column gap-1 mb-3">
            <label asp-for="Features"></label>
            <input asp-for="Features" class="input" type="text" />
        </div>

        <div class="d-flex justify-content-between gap-3">
            @* bedroom *@
            <div class="d-flex flex-column gap-1 mb-3 flex-grow-1">
                <label asp-for="Bedroom"></label>
                <input asp-for="Bedroom" class="input" type="text" />
            </div>

            @* bathroom *@
            <div class="d-flex flex-column gap-1 mb-3 flex-grow-1">
                <label asp-for="Bathroom"></label>
                <input asp-for="Bathroom" class="input" type="text" />
            </div>

            @* area *@
            <div class="d-flex flex-column gap-1 mb-3 flex-grow-1">
                <label asp-for="Area"></label>
                <input asp-for="Area" class="input" type="text" />
            </div>

            @* price *@
            <div class="d-flex flex-column gap-1 mb-3 flex-grow-1">
                <label asp-for="PricePerMonth"></label>
                <input asp-for="PricePerMonth" class="input" type="text" />
            </div>

        </div>

        @* main photo *@
        <div class="d-flex flex-column gap-1 mb-3">
            <label asp-for="MainPhoto" for="formFile"></label>
            <input asp-for="MainPhoto" class="input" type="file" id="formFile">
        </div>

        @* main photo url *@
        <input asp-for="MainPhotoUrl" value="" type="text" hidden>

        @* gallery photos *@
        <div class="d-flex flex-column gap-1 mb-3">
            <label asp-for="GalleryPhotos" for="formFile"></label>
            <input asp-for="GalleryPhotos" class="input" type="file" id="formFile" multiple>
        </div>

        @* main photo url *@
        <input asp-for="Gallery" value="" type="text" hidden>

        <br />

        @* button *@
        <div>
            <input class="btn btn-primary" type="submit" />
        </div>

    </form>
</div>