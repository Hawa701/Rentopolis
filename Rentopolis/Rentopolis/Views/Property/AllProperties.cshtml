@model List<Rentopolis.Models.Data.Property>

<div class="d-flex align-items-end">

    <div class="d-flex flex-column flex-grow-1">
        <h1>Properties</h1>
        <p>This is the list of all the properties available in your system!</p>
    </div>

    <div class="d-flex flex-column flex-grow-1">
        @* search bar *@
        <form method="get" asp-action="AllProperties">
            <div class="input-group mb-3">
                <input type="text" class="form-control ps-4" name="SearchString" value="@ViewData["CurrentFilter"]" placeholder="Address, Sub City, Price, Area, Bedroom, Bathroom..." aria-label="Search" aria-describedby="button-addon2" autocomplete="off" style="box-shadow: 0px 5px 10px rgba(0, 0, 0, 0.23);font-size:15px;">
                <button class="btn btn-dark" type="submit" id="button-addon2" style="padding: 8px 20px;">
                    <i class="fa-solid fa-magnifying-glass"></i>
                </button>
            </div>
        </form>
    </div>
</div>

@* if users are NOT available *@
@if (Model.Count == 0)
{
    <div class="d-flex justify-content-center" style="margin-top:100px">
        <h4>No properties found!</h4>
    </div>
}

@* if users ARE available *@
@if (Model.Count != 0)
{
    <table class="table table-hover mt-4">
        <tr class="table-dark" style="height:50px">
            <th>Id</th>
            <th>Address</th>
            <th>Sub-City</th>
            <th>Added Date</th>
            <th>Approval Status</th>
            <th></th>
        </tr>
    
        @foreach (var property in Model)
        {
            <tr>

                @* id *@
                <td>@property.Id</td>

                @* address *@
                <td>@property.Address</td>

                @* sub city *@
                <td>@property.City</td>
                
                @* added date *@
                <td>@property.AddedDate</td>
                
                @* status *@
                <td>
                    @if (property.IsApproved == true && property.IsDeleted == false)
                    {
                        <p>Approved</p>
                    }
                    @if (property.IsApproved == false && property.IsDeleted == false)
                    {
                        <p>Waiting</p>
                    }@if (property.IsApproved == false && property.IsDeleted == true)
                    {
                        <p>Rejected</p>
                    }
                </td>

                @* detail button *@
                <td>
                    <div class="d-flex justify-content-end gap-2 me-3">
                        <a class="btn" asp-action="Detail" asp-route-id="@property.Id">
                            <i class="fa-solid fa-circle-info fs-5" style="color: black;" onmouseover="this.style.color='blue';" onmouseout="this.style.color='black';"></i>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </table>
}